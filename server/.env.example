# ===========================================
# Конфигурация базы данных MariaDB
# ===========================================

# Имя базы данных
DB_NAME=pbcred

# Пользователь БД
DB_USER=root

# Пароль БД
DB_PASSWORD=

# Подключение через Unix сокет (по умолчанию)
# Раскомментируйте для использования сокета:
DB_SOCKET_PATH=/run/mysqld/mysqld.sock

# Подключение через TCP порт (альтернатива сокету)
# Если DB_SOCKET_PATH закомментирован, используются эти настройки:
# DB_HOST=localhost
# DB_PORT=3306

# ===========================================
# JWT Конфигурация
# ===========================================

# Секретный ключ для подписи JWT токенов
# ВАЖНО: Сгенерируйте уникальный ключ для продакшена!
# Команда для генерации: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-key-change-in-production

# Время жизни токена по умолчанию (без "запомнить меня")
JWT_EXPIRES_IN=1d

# Время жизни токена с "запомнить меня"
JWT_REMEMBER_EXPIRES_IN=30d

# ===========================================
# Сервер
# ===========================================

# Порт API сервера
PORT=3001

# URL фронтенда для CORS
FRONTEND_URL=http://localhost:5173
